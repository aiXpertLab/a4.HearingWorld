<?xml version="1.0" encoding="utf-8"?>
<!--登录界面,用LinearLayout-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--android:background="@color/login_blue"-->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--标题栏-->
        <!--<include layout="@layout/title_bar"/>-->
        <!--显示头像，记得加入id iv_head -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/sv_logo_tranparent"/>
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/layout1"
        android:id="@+id/login_progressBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="登陆中"
            android:gravity="center_vertical"
            android:textColor="@color/red"
            android:textSize="18sp"/>
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <!--输入框-->
    <LinearLayout
        android:layout_below="@+id/login_progressBar"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:counterEnabled="true"
            app:counterMaxLength="11">

            <EditText
                android:id="@+id/et_user_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/user_name_icon"
                android:hint="请输入手机号码"
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLines="1" />
            <!--<EditText-->
                <!--android:id="@+id/et_user_tel"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:drawableLeft="@mipmap/user_name_icon"-->
                <!--android:drawablePadding="10dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:hint="请输入手机号"-->
                <!--android:imeOptions="actionNext"-->
                <!--android:inputType="phone"-->
                <!--android:maxLines="1"-->
                <!--android:textColor="#000000"-->
                <!--android:textColorHint="#a3a3a3"-->
                <!--android:textSize="14sp"/>-->
        </com.google.android.material.textfield.TextInputLayout>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginLeft="35dp"-->
            <!--android:layout_marginRight="35dp"-->
            <!--android:background="@color/white" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:passwordToggleDrawable="@drawable/design_password_eye"
            app:passwordToggleEnabled="true">
            <!--输入框-->
            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:drawableStart="@mipmap/psw_icon"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#a3a3a3"/>
        </com.google.android.material.textfield.TextInputLayout>
        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginLeft="35dp"-->
            <!--android:layout_marginRight="35dp"-->
            <!--android:background="@color/white" />-->
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/layout2"
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:paddingStart="35dp"
        android:paddingEnd="35dp">
        <CheckBox
            android:id="@+id/Login_Remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="记住密码"
            android:checked="false"
            android:textSize="14sp"
            android:textColor="@color/gray"/>
        <!--显示tv register , find_psw -->
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="立即注册"
            android:onClick="register"
            android:textSize="14sp"
            android:textColor="@color/gray"/>
        <!--layout_weight="1" layout_width="0dp"实现均分效果-->
        <TextView
            android:id="@+id/tv_find_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="找回密码?"
            android:layout_alignBaseline="@+id/tv_register"
            android:onClick="findPassword"
            android:textSize="14sp"
            android:textColor="@color/gray"/>
    </RelativeLayout>


    <!--<TextView-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:text="修改密码"-->
        <!--android:id="@+id/login_text_change_pwd"-->
        <!--android:layout_below="@+id/login_edit_pwd"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:textSize="15dp" />-->
    <!--按钮-->
    <Button
        android:layout_below="@+id/layout4"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_selector"
        android:text="登 录"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_below="@id/btn_login"
        android:id="@+id/layout3"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <CheckBox
            android:id="@+id/CB_disclaim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已同意"
            android:checked="true"
            android:textSize="14dp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="@color/navigationColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"/>
        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="@color/navigationColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授权登录"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_marginRight="15dp"/>
        <ImageButton
            android:id="@+id/btn_QQ_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/qq"
            android:onClick="qqlogin"
            android:text="QQ登录"/>
        <ImageButton
            android:layout_marginStart="30dp"
            android:id="@+id/btn_Wechat_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/weixin"
            android:onClick="wechatlogin"
            android:text="微信登录"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>
</RelativeLayout>