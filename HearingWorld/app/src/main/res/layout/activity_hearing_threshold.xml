<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:PlayingPanelView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    tools:context=".l_audiometry.puretest.HearingThreshold">
    <LinearLayout
        android:id="@+id/mp_Progress_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">
        <io.victoralbertos.breadcumbs_view.BreadcrumbsView
            android:id="@+id/left_breadcrumbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:numberOfSteps="11"
            app:visitedStepBorderDotColor="@color/colorVisited"
            app:visitedStepFillDotColor="@color/colorVisited"
            app:nextStepBorderDotColor="@color/colorNext"
            app:nextStepFillDotColor="@color/colorNext"
            app:visitedStepSeparatorColor="@color/colorVisited"
            app:nextStepSeparatorColor="@color/colorNext"
            app:radiusDot="@dimen/radius_dot"
            app:sizeDotBorder="@dimen/size_dot_border"
            app:heightSeparator="@dimen/height_separator"
            android:visibility="invisible"/>
        <io.victoralbertos.breadcumbs_view.BreadcrumbsView
            android:id="@+id/right_breadcrumbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:numberOfSteps="11"
            app:visitedStepBorderDotColor="@color/colorVisited"
            app:visitedStepFillDotColor="@color/colorVisited"
            app:nextStepBorderDotColor="@color/colorNext"
            app:nextStepFillDotColor="@color/colorNext"
            app:visitedStepSeparatorColor="@color/colorVisited"
            app:nextStepSeparatorColor="@color/colorNext"
            app:radiusDot="@dimen/radius_dot"
            app:sizeDotBorder="@dimen/size_dot_border"
            app:heightSeparator="@dimen/height_separator"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_L_R_ear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="当前测试：左耳" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/Tv_HZ_DB_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_playing_prograss_container"
        android:layout_below="@+id/mp_Progress_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <seeingvoice.jskj.com.seeingvoice.l_audiometry.puretest.view.PlayingPanelView
            android:id="@+id/PlayingPanelView"
            android:layout_width="230dp"
            android:layout_height="230dp"
            PlayingPanelView:model="play_model"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_play_ending_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/finish_playing_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="正在播放纯音..."/>
        <TextView
            android:id="@+id/headset_conn_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="请确保耳机已连接手机"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_notHear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_nohear_circle_selector"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="听不见"
                android:textColor="@color/bg_lightblue"
                android:textSize="18sp"
                android:enabled="false"/>
            <Button
                android:id="@+id/btn_canHear"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_circle_selecter"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="听见了"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:enabled="false"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>