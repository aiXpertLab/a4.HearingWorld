<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_blue">
    <LinearLayout
        android:id="@+id/bluetooth_hint"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="选择您的见声智能蓝牙耳机"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_searching_state"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="请点击下方搜索按钮开始搜索"
            android:textColor="@color/gray"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/bluetooth_hint"
        android:id="@+id/layout_progressbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_blue_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/btn_login_color"
            android:visibility="gone"/>
        <ProgressBar
            android:id="@+id/pg_blue_search_progressbar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminateTint="@color/gray"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="没有找到设备"
            android:gravity="center"
            android:textColor="@color/btn_login_color"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="@drawable/btn_color_selector"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_btn"/>
        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接此设备"
            android:textColor="@drawable/btn_color_selector"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_btn"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>