<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="20dp">
    <TextView android:id="@+id/feedback_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#706F6D"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="欢迎您提出宝贵的意见和建议，您的建议对我们改善服务非常有帮助。">
    </TextView>
    <LinearLayout
        android:layout_below="@+id/feedback_title"
        android:id="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn">
        <Spinner android:id="@+id/feedback_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:focusable="true"
            android:entries="@array/feedback_type"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/feedback_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_selector"
            android:hint="请输入您的反馈意见（字数500以内）"
            android:gravity="top|left"
            android:layout_weight="1"
            android:maxEms="20"
            android:minEms="20"
            android:padding="10dp" />
        <EditText
            android:layout_below="@+id/empty"
            android:id="@+id/feedback_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxEms="1"
            android:minEms="1"
            android:hint="留下联系方式，手机，座机或者邮箱.."
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_edittext_selector"/>
        <Button
            android:id="@+id/feedback_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="提交反馈"
            android:textSize="19dp"
            android:textColor="@drawable/btn_color_selector"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_btn"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</RelativeLayout>