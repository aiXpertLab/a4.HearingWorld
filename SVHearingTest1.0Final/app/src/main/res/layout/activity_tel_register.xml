<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_pop_window_coner"
    android:padding="20dp">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tel_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:counterEnabled="true"
        app:counterMaxLength="11">
        <EditText
            android:id="@+id/ed_tel_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_below="@+id/tel_number_layout"
        android:id="@+id/verify_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:counterEnabled="true"
            app:counterMaxLength="6">

            <EditText
                android:id="@+id/ed_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/get_verfiy_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="获得验证码"
            android:textColor="@drawable/btn_color_selector"
            android:textSize="@dimen/text_size"
            android:background="@drawable/shape_conner"/>
    </LinearLayout>

    <Button
        android:layout_below="@+id/verify_code_layout"
        android:id="@+id/user_verfiy_submit"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_conner"
        android:text="下一步"
        android:visibility="visible"
        android:textColor="@drawable/btn_color_selector"
        android:textSize="25sp"/>
</RelativeLayout>