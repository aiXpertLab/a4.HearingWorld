<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".heartests.newpuretest.newPureTestActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_left_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左:"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <io.victoralbertos.breadcumbs_view.BreadcrumbsView
                android:id="@+id/left_breadcrumbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:heightSeparator="@dimen/height_separator"
                app:nextStepBorderDotColor="@color/colorNext"
                app:nextStepFillDotColor="@color/colorNext"
                app:nextStepSeparatorColor="@color/colorNext"
                app:numberOfSteps="9"
                app:radiusDot="@dimen/radius_dot"
                app:sizeDotBorder="@dimen/size_dot_border"
                app:visitedStepBorderDotColor="@color/colorPrimary"
                app:visitedStepFillDotColor="@color/colorPrimary"
                app:visitedStepSeparatorColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@+id/tv_1"
                app:layout_constraintBottom_toBottomOf="@+id/tv_1"
                app:layout_constraintStart_toEndOf="@+id/tv_1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_right_step"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_left_step">
            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右:"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <io.victoralbertos.breadcumbs_view.BreadcrumbsView
                android:id="@+id/right_breadcrumbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:heightSeparator="@dimen/height_separator"
                app:nextStepBorderDotColor="@color/colorNext"
                app:nextStepFillDotColor="@color/colorNext"
                app:nextStepSeparatorColor="@color/colorNext"
                app:numberOfSteps="9"
                app:radiusDot="@dimen/radius_dot"
                app:sizeDotBorder="@dimen/size_dot_border"
                app:visitedStepBorderDotColor="@color/colorPrimary"
                app:visitedStepFillDotColor="@color/colorPrimary"
                app:visitedStepSeparatorColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@+id/tv_2"
                app:layout_constraintBottom_toBottomOf="@+id/tv_2"
                app:layout_constraintStart_toEndOf="@+id/tv_2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_right_step">
            <TextView
                android:id="@+id/tv_finish_num_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左耳完成：0/8,"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tv_finish_num_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右耳完成：0/8"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/tv_finish_num_left"
                app:layout_constraintTop_toTopOf="@+id/tv_finish_num_left"
                app:layout_constraintBottom_toBottomOf="@+id/tv_finish_num_left"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_tip1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/gray"
        android:padding="8dp"
        android:text="见声听测将根据您听力测实际情况，智能选择音调、音量组合，尽可能全面准确的反应您的听力现状。"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1" />
    <RadioGroup
        android:id="@+id/L_R_choose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">
        <RadioButton
            android:id="@+id/rd_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/left_radio_check"/>
        <RadioButton
            android:id="@+id/rd_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:button="@null"
            android:background="@drawable/right_radio_check"/>
    </RadioGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_R_choose">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_tone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音调："
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000赫兹"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_tone" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progress_bar_h"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:max="30"
            android:progress="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_tone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar_h">

            <TextView
                android:id="@+id/tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音量："
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_volume_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-10分贝"
                app:layout_constraintBottom_toBottomOf="@+id/tv_volume"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_volume" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_count_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="倒计时3S"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_volume" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_count_down">

            <Button
                android:id="@+id/btn_canHear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我听见了"
                android:layout_marginRight="15dp"
                android:background="@drawable/register_selector"
                android:textColor="@drawable/btn_color_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/guideline"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btn_nocanHear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我听不到"
                android:layout_marginLeft="15dp"
                android:background="@drawable/register_selector"
                android:textColor="@drawable/btn_color_selector"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="invisible"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/tv_earbud_conn_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请连接耳机（有线耳机，蓝牙耳机均可）"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAlignment="center"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/btn_start_pause"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/playing_btn_selector"/>
            <Button
                android:id="@+id/btn_check_out_pure_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:background="@drawable/register_selector"
                android:text="查看测试结果"
                android:textColor="@drawable/btn_color_selector"
                android:textSize="@dimen/btn_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="温馨提示：一般的办公环境下可以获得满意的测试结果，请避免嘈杂的环境。"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>