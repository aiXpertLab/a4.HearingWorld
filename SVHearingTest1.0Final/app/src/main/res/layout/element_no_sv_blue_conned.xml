<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tool_bar"
    android:layout_margin="10dp"
    android:background="@drawable/shape_float_window"
    android:padding="8dp">


    <TextView
        android:id="@+id/tv_bluedevice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="手机蓝牙没有打开"
        android:textColor="@color/btn_login_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bluedevice_name"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bluetooth2lanya"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/MyBatterViewLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.seeingvoice.www.svhearing.blueTest.battery.MyBatterView
            android:id="@+id/MyBatterViewLeft"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:drawableLeft="@mipmap/user_name_icon"
            app:batteryTextSize="@dimen/dp15"
            app:isLeft="true"
            app:layout_constraintBottom_toBottomOf="@+id/iv_ble"
            app:layout_constraintStart_toEndOf="@+id/iv_ble"
            app:layout_constraintTop_toTopOf="@+id/iv_ble"
            app:mCapWidth="@dimen/dp4"
            app:showText="true" />

        <com.seeingvoice.www.svhearing.blueTest.battery.MyBatterView
            android:id="@+id/MyBatterViewRight"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:drawableLeft="@mipmap/user_name_icon"
            app:batteryTextSize="@dimen/dp15"
            app:isLeft="false"
            app:layout_constraintBottom_toBottomOf="@+id/MyBatterViewLeft"
            app:layout_constraintStart_toEndOf="@+id/MyBatterViewLeft"
            app:layout_constraintTop_toTopOf="@+id/MyBatterViewLeft"
            app:mCapWidth="@dimen/dp4"
            app:showText="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_conn_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="断开连接"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bluedevice_name" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_headset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battery" >

        <ProgressBar
            android:id="@+id/progress_Bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_conn_headset"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_conn_headset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_float_window"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/tv_find_sv_earbuds"
            android:textColor="@color/mainText"
            app:layout_constraintStart_toEndOf="@id/progress_Bar"
            app:layout_constraintTop_toTopOf="@id/progress_Bar"
            app:layout_constraintBottom_toBottomOf="@id/progress_Bar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_conn_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="bottom"
        android:text="连接指南"
        android:textColor="@color/btn_login_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ImgV_del_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@mipmap/ic_setup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>