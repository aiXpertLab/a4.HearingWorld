<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/MusicImagee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.5"
        android:src="@mipmap/background2"/>
    <com.seeingvoice.www.svhearing.heartests.musicPlayer.LrcDealClass.XCRoundImageView
        android:id="@+id/MusicImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"/>
    <!--<ImageButton-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:src="@mipmap/circle"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--/>-->

    <TextView
        android:id="@+id/MusicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#332933"
        android:layout_marginTop="5dp"
        android:typeface="serif"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/MusicArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/MusicName"
        android:textSize="20dp"
        android:textColor="#746274"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:typeface="normal"
        android:singleLine="true"
        android:ellipsize="end"/>

    <com.seeingvoice.www.svhearing.heartests.musicPlayer.LrcDealClass.LrcView
        android:id="@+id/LrcViewId"
        android:layout_width="match_parent"
        android:layout_below="@id/MusicArtist"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true"
        android:layout_margin="5dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/AudioControlId"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">
        <LinearLayout
            android:id="@+id/layout_volumeL"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="左耳音量"/>
            <SeekBar
                android:id="@+id/skb_L_Volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_volumeR"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="右耳音量"/>
            <SeekBar
                android:id="@+id/skb_R_Volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>

    <com.seeingvoice.www.svhearing.heartests.musicPlayer.AudioControl
        android:id="@+id/AudioControlId"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp" />
</RelativeLayout>
