<?xml version="1.0" encoding="utf-8"?>
<!--登录界面,用LinearLayout-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--android:background="@color/login_blue"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!--标题栏-->
        <!--<include layout="@layout/title_bar"/>-->
        <!--显示头像，记得加入id iv_head -->
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/icon_bat_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/img_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_progressBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/hint_loging"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="登陆中"
            android:gravity="center_vertical"
            android:textColor="@color/red"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@+id/hint_loging"
            app:layout_constraintBottom_toBottomOf="@+id/hint_loging"
            app:layout_constraintStart_toEndOf="@+id/hint_loging"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--输入框-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintTop_toBottomOf="@+id/login_progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:counterEnabled="true"
            app:counterMaxLength="11"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/et_user_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/user_name_icon"
                android:hint="请输入手机号码"
                android:drawablePadding="10dp"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:passwordToggleDrawable="@drawable/design_password_eye"
            app:passwordToggleEnabled="true"
            app:layout_constraintTop_toBottomOf="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <!--输入框-->
            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:drawableStart="@mipmap/psw_icon"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#a3a3a3"/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        app:layout_constraintTop_toBottomOf="@+id/layout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <CheckBox
            android:id="@+id/Login_Remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:checked="false"
            android:textSize="14sp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <!--显示tv register , find_psw -->
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:onClick="register"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginStart="@dimen/dp15"
            app:layout_constraintStart_toEndOf="@id/Login_Remember"
            app:layout_constraintTop_toTopOf="@id/Login_Remember"
            app:layout_constraintBottom_toBottomOf="@id/Login_Remember"/>
        <!--layout_weight="1" layout_width="0dp"实现均分效果-->
        <TextView
            android:id="@+id/tv_find_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码?"
            android:onClick="findPassword"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/dp15"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/tv_register"
            app:layout_constraintTop_toTopOf="@+id/Login_Remember"
            app:layout_constraintBottom_toBottomOf="@+id/Login_Remember" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_below="@+id/layout4"
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_selector"
        android:text="登 录"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/layout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <CheckBox
            android:id="@+id/CB_disclaim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已同意"
            android:checked="true"
            android:textSize="14dp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_user_agreement"/>
        <TextView
            android:id="@+id/tv_user_agreement"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="@color/navigationColor"
            app:layout_constraintTop_toTopOf="@+id/CB_disclaim"
            app:layout_constraintBottom_toBottomOf="@+id/CB_disclaim"
            app:layout_constraintStart_toEndOf="@+id/CB_disclaim"
            app:layout_constraintEnd_toStartOf="@+id/tv_vertical_line"/>
        <TextView
            android:id="@+id/tv_vertical_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            app:layout_constraintTop_toTopOf="@+id/tv_user_agreement"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_agreement"
            app:layout_constraintStart_toEndOf="@+id/tv_user_agreement"
            app:layout_constraintEnd_toStartOf="@+id/tv_privacy_policy"/>
        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="@color/navigationColor"
            app:layout_constraintTop_toTopOf="@+id/tv_user_agreement"
            app:layout_constraintBottom_toBottomOf="@+id/tv_user_agreement"
            app:layout_constraintStart_toEndOf="@+id/tv_user_agreement"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_login"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_version"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_authorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授权登录"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btn_Wechat_login"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/weixin_icon_selector"
            android:onClick="wechatlogin"
            android:text="微信登录"
            app:layout_constraintBottom_toBottomOf="@+id/tv_authorize"
            app:layout_constraintStart_toEndOf="@+id/tv_authorize"
            app:layout_constraintTop_toTopOf="@+id/tv_authorize" />
        <ImageButton
            android:id="@+id/btn_QQ_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/qq_icon_selector"
            android:onClick="qqlogin"
            android:text="QQ登录"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/btn_Wechat_login"
            app:layout_constraintTop_toTopOf="@+id/btn_Wechat_login"
            app:layout_constraintBottom_toBottomOf="@+id/btn_Wechat_login"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="当前版本"
        android:gravity="center"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>